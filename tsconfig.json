{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": "./"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
